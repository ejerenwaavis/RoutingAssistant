<%- include("partials/header.ejs")%>

<link href="<%= body.publicFolder %>css/profile.css" rel="stylesheet">

<div class="container pt-4">
  <div class="d-flex justify-content-center">

    <div class=" mb-3 col-8 col-sm-8 col-md-8 ">
      <div class="row g-0">
        <div class="col-md-4 bg-secondary d-flex align-items-center justify-content-center">
          <% if(user.photoURL){ %>
          <img src=<%= user.photoURL %> alt="" class="rounded-pill">
          <% } else { %>
          <div class="bg-secondary rounded-pill p-3 ">
            <i class="fas fa-3x fa-user mt-0 ms-0 ps-0 text-white"></i>
          </div>
          <% } %>
        </div>
        <div class="col-md-8 card">
          <div class="card-body text-start">
            <h5 class="card-title">Account Information</h5>
            <hr class="mt-1 mb-2">
            <p class="card-text d-inline-block mb-1"><small class="text-muted">Name: </small> <%=user.firstName +" "+ user.lastName %></p>
            <p class="card-text d-inline-block mb-1"><small class="text-muted">Username: </small> <%=user.username%></p>


            <h5 class="card-title mt-3 mb-0">Subsription</h5>
            <hr class="mt-1 mb-2">
            <p class="card-text d-inline-block mb-1"><small class="text-muted">Price: </small> <%=(user.isProUser)? "$5.99": "$0"%>/mo </p>
            <p class="card-text  mb-1"><small class="text-muted">Status: </small> <%=(user.isProUser)?"Pro":"Basic" %> </p>
            <p class="card-text "><small class="text-muted ">Quota Remaining: </small> <%=(user.isProUser)?"unlimited":10 - user.usageCount %> </p>

            <% if(!user.isProUser){ %>
            <!-- Button trigger modal -->
            <button type="button" class="d-block btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              Upgrade <i class="fas fa-angle-double-up"></i>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog  modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Upgrade to Pro <i class="fas fa-angle-double-up"></i></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="" id="proIntro">
                      <div class="row justify-content-center">
                        <div class="col-6">
                          <p>Upgrading to Pro gives you access to:</p>
                          <ul>
                            <li>Unlimited Quota</li>
                            <li>Handle more than 120 Stops</li>
                          </ul>
                        </div>
                      </div>
                      <div class="text-center">
                        <h1 class="display-4 text-center">$7.99/mo</h1>
                      </div>
                    </div>

                    <div class="text-center py-5" id="loading">
                      <i class="text-secondary fas fa-3x fa-circle-notch fa-spin"></i>
                    </div>
                  </div>

                  <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" onclick="startCheckout('prod_JL9S7yMBoTYZlw')" class="btn btn-primary">Proceed</button>
                  </div>
                </div>

              </div>
            </div>
            <%}%>
        </div>
      </div>
    </div>
  </div>
</div>

</div>



<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="<%= body.publicFolder %>js/script.js"></script>
<script src="<%= body.publicFolder %>js/proUpgradeHandler.js"></script>

</body>

</html>
